<resources>
    <!-- Base application theme. -->
    <style name="Theme.Oxy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_login</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg_login</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/CustomChipChoice</item>
        <item name="android:searchViewStyle">@style/SearchViewDialogStyle</item>
        <item name="android:colorEdgeEffect">@color/login_btn</item>
        <item name="android:colorControlActivated">@color/login_btn</item>
        <item name="android:colorAccent">@color/login_btn</item>
        <item name="android:colorControlHighlight">@color/login_btn</item>
    </style>

    <style name="Theme.Oxy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Oxy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorControlActivated">@color/login_btn</item>
        <item name="android:colorAccent">@color/login_btn</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

    <style name="Theme.Oxy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="NoActionBarDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:colorControlActivated">@color/login_btn</item>
        <item name="android:colorAccent">@color/login_btn</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:colorControlHighlight">@color/login_btn</item>
    </style>

    <style name="CartDialogStyle" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/bg_login</item>
        <item name="rippleColor">@color/login_btn</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/bg_login</item>
        <item name="rippleColor">@color/login_btn</item>
    </style>

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/bg_login</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">
        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/login_btn</item>
        <item name="colorPrimary">@color/bg_login_secondary</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@drawable/background_color_chip_state_list</item>
        <item name="android:textColor">@drawable/text_color_chip_state_list</item>
        <item name="checkedIcon">@drawable/round_done_24</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/login_btn</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:colorControlActivated">@color/login_btn</item>
        <item name="android:colorAccent">@color/login_btn</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

    <style name="SearchViewDialogStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:colorControlActivated">@color/login_btn</item>
        <item name="android:colorAccent">@color/login_btn</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>
</resources>